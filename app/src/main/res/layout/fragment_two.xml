<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.fragment.two.TwoFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/img_second_fragment"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/txt"
        android:layout_marginTop="98dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/risque"
        android:textSize="28sp"
        android:textStyle="bold"
        android:text="@string/second_screen_txt"
        android:textAlignment="center"
        android:textColor="#115092"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="40dp"/>
    <ImageView
        android:id="@+id/board_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/img_board"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="40dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_board_2"
        android:layout_alignTop="@id/board_one"
        android:layout_marginTop="70dp"/>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="74dp"
        android:layout_marginHorizontal="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/btn_left"
            android:layout_marginHorizontal="23dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_btn_left"
            android:backgroundTint="#00FFFFFF"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_marginHorizontal="23dp"
            android:layout_height="wrap_content"
            android:src="@drawable/img_btn_right"
            android:backgroundTint="#00FFFFFF"
            android:id="@+id/btn_right"/>

    </LinearLayout>





</RelativeLayout>