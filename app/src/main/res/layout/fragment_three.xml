<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.fragment.three.ThreeFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="#41000000"
        android:paddingEnd="300dp"
        android:scaleType="centerCrop"
        android:src="@drawable/firstscreenphoto" />

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#00FFFFFF"
        android:elevation="1dp"
        android:src="@drawable/ic_btn_back" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/serega_pirat"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="20dp"
        android:elevation="1dp"
        android:fontFamily="@font/risque"
        android:gravity="center"
        android:text="@string/txt_2"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/serega_pirat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="150dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="58dp"
        android:elevation="1dp"
        android:src="@drawable/img_serega_pirat" />

    <ImageView
        android:id="@+id/ne_serega_pirat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/serega_pirat"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:elevation="1dp"
        android:src="@drawable/img_ne_serega_pirat" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ne_serega_pirat"
        android:layout_marginHorizontal="6dp"
        android:layout_marginTop="34dp"
        android:elevation="1dp">

        <ImageButton
            android:id="@+id/btn_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="23dp"
            android:backgroundTint="#00FFFFFF"
            android:src="@drawable/img_btn_serega_pirat" />

        <ImageButton
            android:id="@+id/btn_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="23dp"
            android:backgroundTint="#00FFFFFF"
            android:src="@drawable/img_btn_ne_serega_pirat" />

    </LinearLayout>


</RelativeLayout>